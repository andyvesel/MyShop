<h2>Записаться</h2>

<form action="/visit" method="POST" role="form">
  <script type="text/javascript">
    $(function(){

      $('#color').simplecolorpicker();
      $('#datetimepicker').datetimepicker();
    });
  </script>

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Введите имя" value="<%=@username %>">
  </div>
 
   <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" placeholder="Введите телефон" value="<%=@phone %>">
  </div>

    <div class="form-group">
    <label>Когда вас ждать?</label>
    <input id="datetimepicker" name="time" type="text"  class="form-control" placeholder="Укажите дату и время" value="<%=@time %>">
  </div>
  <label>Выберите парикмахера</label>
  <select class="form-control" name="your_barber">
    <option <%= @your_barber == 'Walt' ? 'selected': '' %>>Walt</option>
    <option <%= @your_barber == 'Jessie' ? 'selected' : '' %>>Jessie</option>
    <option <%= @your_barber == 'Badger' ? 'selected' : '' %>>Badger</option>
    <option <%= @your_barber == 'Gus' ? 'selected' : '' %>>Gus</option>
  </select>
  <p></p>
 
 <div class="form-group">
  <label>Выберите цвет: </label>
    <select id="color" name="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <p></p>
   <button type="submit" class="btn btn-primary">Кнопка</button>

</form>
